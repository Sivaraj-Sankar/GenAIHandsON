class MyClass:
    def __init__(self):
        self.public_var = "Public"
        self._protected_var = "Protected"
        self.__private_var = "Private"

    def display(self):
        print("Inside class:")
        print(self.public_var)
        print(self._protected_var)
        print(self.__private_var)



C = MyClass()
C.display()
print(C.public_var)
print(C._protected_var)
print(C.__private_var)

