class BaseClass():
    
    a = "10"
    
    @staticmethod
    def method1():
        return "sivaraj"
        
    @classmethod
    def method2(cls):
        print(cls)
        return "Sivaraj1" + cls.a
        
    def method(self):
        print(self)
        return "Sivaraj" + self.a


B = BaseClass()
