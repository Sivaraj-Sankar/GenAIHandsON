#Intersection 
from collections import Counter


a = [1,3,43,5,3,3]
b = [3,4,5,3]

def Intersection(nums1,nums2):
    counts = Counter(nums2)
    results = []
    for i in nums1:
        if counts[i] > 0:
            results.append(i)
            counts[i]-=1
    return results
c = Intersection(a,b)
print(c)



